doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        title Result Management System 
    body 
        nav.navbar.navbar-expand-lg.navbar-dark.bg-primary 
            .container 
                a.navbar-brand(href="") RMS
        .container-fluid
            .row 
                .col-3 
                    .card 
                        .card-body 
                            form(action="/",method="post")
                                .mb-3 
                                    label(for="") FirstName
                                    input.form-control(type="text", placeholder="first name",name="fname")
                                .mb-3 
                                    label(for="") LastName
                                    input.form-control(type="text", placeholder="Last name",name="lname")
                                .mb-3 
                                    label(for="") Father Name 
                                    input.form-control(type="text",placeholder="Father Name",name="father_name")
                                .mb-3 
                                    label(for="") Contact 
                                    input.form-control(type="number",,placeholder="contact", name="contact")
                                .row 
                                    .col 
                                        .mb-3 
                                            label(for="") Maths 
                                            input.form-control(type="text",name="maths") 
                                    .col 
                                        .mb-3 
                                            label(for="") Sci 
                                            input.form-control(type="text",name="sci") 
                                    .col 
                                        .mb-3 
                                            label(for="") sst 
                                            input.form-control(type="text",name="sst") 
                                    .col 
                                        .mb-3
                                            label(for="") hindi 
                                            input.form-control(type="text",name="hindi") 
                                    .col 
                                        .mb-3
                                            label(for="") eng 
                                            input.form-control(type="text",name="eng")
                                .mb-3 
                                    input.btn.btn-success.w-100(type="submit")
                .col-8 
                    table.table.table-sm
                        tr 
                            th first name 
                            th last name 
                            th father name 
                            th contact 
                            th maths 
                            th sci 
                            th sst 
                            th hindi 
                            th eng
                            th Action
                            each val in data
                                tr 
                                    td= val.first_name 
                                    td= val.last_name 
                                    td= val.father_name 
                                    td= val.contact 
                                    td= val.maths 
                                    td= val.sci 
                                    td= val.sst
                                    td= val.hindi 
                                    td= val.eng
                                    td 
                                        a.btn.btn-danger.me-2(href=`/delete/${val.id}`) <i class="bi bi-trash"></i>
                                        a.btn.btn-success(href=`/edit/${val.id}`) <i class="bi bi-pencil-square"></i>