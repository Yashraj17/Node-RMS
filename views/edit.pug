doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        title Edit record = Result Management System 
    body 
        nav.navbar.navbar-expand-lg.navbar-dark.bg-primary 
            .container 
                a.navbar-brand(href="") RMS
        .container 
            .row 
                .col-3.mx-auto
                    .card 
                        .card-body 
                            form(action="",method="post")
                                .mb-3 
                                    label(for="") FirstName
                                    input.form-control(type="text", value=`${data.first_name}`,name="fname")
                                .mb-3 
                                    label(for="") LastName
                                    input.form-control(type="text", value=`${data.last_name}`,name="lname")
                                .mb-3 
                                    label(for="") Father Name 
                                    input.form-control(type="text",value=`${data.father_name}`,name="father_name")
                                .mb-3 
                                    label(for="") Contact 
                                    input.form-control(type="number",value=`${data.contact}`, name="contact")
                                .row 
                                    .col 
                                        .mb-3 
                                            label(for="") Maths 
                                            input.form-control(type="text",value=`${data.maths}`,name="maths") 
                                    .col 
                                        .mb-3 
                                            label(for="") Sci 
                                            input.form-control(type="text",value=`${data.sci}`,name="sci") 
                                    .col 
                                        .mb-3 
                                            label(for="") sst 
                                            input.form-control(type="text",value=`${data.sst}`,name="sst") 
                                    .col 
                                        .mb-3
                                            label(for="") hindi 
                                            input.form-control(type="text",value=`${data.hindi}`,name="hindi") 
                                    .col 
                                        .mb-3
                                            label(for="") eng 
                                            input.form-control(type="text",value=`${data.eng}`,name="eng")
                                .mb-3 
                                    input.btn.btn-success.w-100(type="submit")